@model IEnumerable<WebApplication1.Models.buildModel>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>

    @using (Html.BeginForm())
    {
    <p>
        Filter by a Specific Hero: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter" />
    </p>
    }
    @Html.ActionLink("Builds with moonshard", "MoonShardEaten", "buildModels") |
    @Html.ActionLink("Builds without moonshard", "MoonshardNotEaten", "buildModels")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item5)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item6)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoonShardEaten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.level)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item5)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item6)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoonShardEaten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.level)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |

        </td>
    </tr>
}

</table>
